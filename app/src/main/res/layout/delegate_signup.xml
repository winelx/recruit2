<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                                              xmlns:tools="http://schemas.android.com/tools"
                                              android:layout_width="match_parent"
                                              android:layout_height="match_parent"
                                              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="{fa-angle-left}"
            android:textColor="@color/black"
            android:textSize="30sp"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/login_text"
            android:textSize="20sp"
            />
    </RelativeLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="40dp">

            <android.support.v7.widget.AppCompatEditText
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/editext_style"
                android:hint="手机号"
                android:textColor="@color/login_text"
                android:textColorHint="@color/login_text"
                android:textSize="15sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/logup_user_code"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/editext_style"
                    android:hint="验证码"
                    android:textColor="@color/login_text"
                    android:textColorHint="@color/login_text"
                    android:textSize="15sp"/>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/logup_user_shuzi"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_alignRight="@id/logup_user_code"
                    android:layout_below="@+id/logup_user_phone"

                    android:background="@drawable/button_code_style"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/login_text"/>
            </RelativeLayout>

            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/editext_style"
                android:hint="手机号"
                android:textColor="@color/login_text"
                android:textColorHint="@color/login_text"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/login_checkbox"
                    android:layout_width="26dp"
                    android:layout_height="20dp"
                    android:layout_alignStart="@+id/logup_user_on"
                    android:layout_below="@+id/logup_user_code"
                    android:layout_gravity="center"
                    android:theme="@style/MyCheckBox"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="同意《个人会员注册协议》&amp;《隐私协议》"/>

            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_style3"
                android:gravity="center"
                android:text="注册"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                tools:ignore="HardcodedText"/>


        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v4.widget.NestedScrollView>
</android.support.v7.widget.LinearLayoutCompat>