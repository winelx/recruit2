<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="56dp">


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/login_phone_edit_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="手机号"
            android:paddingLeft="20dp"
            android:textColor="@color/login_text"
            android:textColorHint="@color/login_editext"
            android:theme="@style/MyEditText"
            tools:ignore="HardcodedText"/>


        <!--密码-->
        <RelativeLayout
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/login__phone_edit_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_weight="8"
                android:hint="请输入验证码"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textColor="@color/login_text"
                android:textColorHint="@color/login_editext"
                android:theme="@style/MyEditText"
                tools:ignore="HardcodedText"/>

            <Button
                android:id="@+id/login_phone_text_boolean"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignBaseline="@+id/login__phone_edit_password"
                android:layout_alignBottom="@+id/login__phone_edit_password"
                android:layout_alignParentEnd="true"
                android:background="@color/theme"
                android:text="验证码"
                android:textColor="@color/Writer"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/login_phone_checkbox"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/logup"
                android:layout_below="@+id/login_passWord"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="10dp"
                android:theme="@style/MyCheckBox"/>


            <TextView
                android:id="@+id/login_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="用户协议"
                android:textColor="@color/login_text"
                android:textSize="14sp"/>

        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/login_phone_button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_style3"
            android:gravity="center"
            android:padding="12dp"
            android:text="登陆"
            android:textColor="@android:color/white"
            tools:ignore="HardcodedText"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.LinearLayoutCompat>